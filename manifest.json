{
  "manifest_version": 3,
  "name": "ðŸ¦Ž Chalamandra Core - AI Communication Intelligence",
  "version": "2.0.0",
  "description": "Real-time multidimensional context analysis using Chrome's Built-in AI APIs. Solve communication misunderstandings in emails, chats, and documents.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Chalamandra Core - Analyze Communication Context",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/images/*"],
    "matches": ["<all_urls>"]
  }]
}
